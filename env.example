# OpenAI API ключ для генерації відповідей через GPT-4
OPENAI_API_KEY=your-openai-api-key-here

# Шлях до директорії де зберігатиметься векторна база даних
VECTOR_STORE_PATH=./vector_store

# Шлях до директорії з даними карт Таро
CARDS_DATA_PATH=./app/static/images/cards

# Налаштування Flask
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_RUN_PORT=8080  # Додано налаштування порту
FLASK_RUN_HOST=0.0.0.0  # Додано налаштування хоста

# Налаштування для векторної бази даних
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Налаштування для GPT моделі
MODEL_NAME=gpt-4-turbo-preview
TEMPERATURE=0.7

# Налаштування LangSmith для обзервабіліті
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=tarot-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
